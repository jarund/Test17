<odoo>
    <data>

      <record id="paperformat_ship" model="report.paperformat">
          <field name="name">Shipping Report</field>
          <field name="default" eval="True" />
          <field name="format">A4</field>
          <field name="page_height">0</field>
          <field name="page_width">0</field>
          <field name="orientation">Portrait</field>
          <field name="margin_top">60</field>
          <field name="margin_bottom">90</field>
          <field name="margin_left">7</field>
          <field name="margin_right">7</field>
          <field name="header_line" eval="False" />
          <field name="header_spacing">55</field>
          <field name="dpi">90</field>
      </record>

      <report
              string="Shipping Report"
              id="action_ship_report"
              model="stock.picking"
              report_type="qweb-pdf"
              name="cmc_report_mods.ship_report"
              file="cmc_report_mods.ship_report"
              paperformat="paperformat_ship"
              print_report_name="'Ship - %s - %s' % (object.partner_id.name or '', object.name)"
      />

    </data>
</odoo>