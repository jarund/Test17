<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_ship_document" inherit_id="stock.report_delivery_document" primary="True">
    <xpath expr="//table[@name='stock_move_line_table']" position="replace">
        <strong>Table here</strong>
        <table class="table table-sm">
            <thead>
                <tr>
                    <th name="th_sm_product"><strong>Product</strong></th>
                    <th name="th_sm_quantity"><strong>Quantity</strong></th>
                    <th name="th_sm_quantity"><strong>Lot Number</strong></th>
                    <th name="th_sm_quantity"><strong>Adj Qty</strong></th>
                </tr>
            </thead>
            <tbody>
                <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                <t t-foreach="lines" t-as="move">
                <tr t-foreach="move.move_line_ids" t-as="move_line">
                    <td>
                        <span t-field="move.product_id"/>
                    </td>
                    <td>
                        <span t-field="move.product_uom_qty"/>
                        <span t-field="move.product_uom"/>
                    </td>
                    <td>
                        <span t-field="move_line.lot_id"/>
                        <!--<strong>LLLLLL</strong>-->
                    </td>
                    <td>
                        <span t-field="move_line.adjust_quantity"/>
                        <!--<strong>#####</strong>-->
                    </td>
                    </tr>
                </t>
            </tbody>
        </table>
    </xpath> 


        <!-- <xpath expr="//th[@name='th_sml_quantity']" position="after">
            <th name="th_sml_ady_qty" class="text-center"><strong>Adj Qty</strong></th>
        </xpath> 
        <xpath expr="//t[@name='no_package_move_lines']" position="after">
            <tr t-foreach="move_lines" t-as="move_line">
                <t t-call="move_line.adjust_quanitity"/>
            </tr> 
        </xpath> -->
    </template>

    <template id="ship_report">
        <t t-foreach="docs" t-as="o">
            <t t-call="cmc_report_mods.report_ship_document" t-lang="o.partner_id.lang"/>
        </t>
    </template>

</odoo>
