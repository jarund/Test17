<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_picking_confirm_wizard_form" model="ir.ui.view">
        <field name="name">stock.picking.confirm.wizard.form</field>
        <field name="model">stock.picking.confirm.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="msg" class="text-danger" nolabel="1"/><br/>
                        <span>Are you sure want to continue?</span>
                    </group>
                    <footer>
                        <button string="Yes" name="action_confirm" type="object" default_focus="1" class="btn-primary"/>
                        <button string="No" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id='stock_picking_confirm_wizard_action' model='ir.actions.act_window'>
        <field name="name">Picking Confirm</field>
        <field name="res_model">stock.picking.confirm.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="view_id" ref="view_stock_picking_confirm_wizard_form"/>
    </record>

</odoo>