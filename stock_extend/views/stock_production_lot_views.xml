<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cmc_lot_form" model="ir.ui.view" >
        <field name="name">Lot/Serial Numbers List</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="cmc_scrap_tracking.cmc_lot_form"/>
        <field name="arch" type="xml">
            <field name="cmc_container" position="replace">
                <field name="container_id" groups="base.group_no_one"/>
                <field name="cmc_container"
                       domain="[('categ_id', '=', container_id)]"/>
            </field>
        </field>
    </record>

</odoo>